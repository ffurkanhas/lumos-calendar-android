<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/current_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:text="@string/enter_date_message"
            android:textColor="#FFF"
            android:textSize="23sp" />

        <Button
            android:id="@+id/add_event_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/cc_event_red_theme"
            android:layout_marginLeft="260dp"
            android:text="+"
            android:textColor="#fff" />
    </LinearLayout>

    <com.yuyakaido.android.couplescalendar.ui.CouplesCalendarView
        android:id="@+id/activity_main_couples_calendar_view"
        android:layout_width="match_parent"
        android:layout_height="400dp">
    </com.yuyakaido.android.couplescalendar.ui.CouplesCalendarView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cc_while">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/listView"/>
    </LinearLayout>
</LinearLayout>